@using WebApplication6.Models
@model IEnumerable<Producto>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="=" utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>View</title>
    <link href="~/Scripts/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/jquery-3.2.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/FuncionesPrueba2.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button><a class="navbar-brand" href="#">My demo</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#">Index</a></li>
                    <li><a href="/Prueba1/Index/">Prueba 1</a></li>
                </ul>
            </div>
        </div> <!-- container-fluid -->
    </nav>




    <div class="jumbotron"><h1>Prueba 2 Lista de datos</h1></div>


    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                @if (@Model.Count() > 0)
                {  <div class="checkbox"><label>@Html.CheckBox("productoActivos", true)Productos activos</label> </div>}
                
            </div>
            <div class="col-sm-6">
                @if(@Model.Count()>0)
                {<div class="checkbox"> <label>@Html.CheckBox("productosDescontinuados",true)Productos descontinuados</label> </div>}
            </div>
        </div>


        <div class="row">
            <div class="col-sm-12" id="ContenedorTabla">
                <table class="table table-hover" id="miTabla">                   
                       <tr>
                            <td>Id</td>
                            <td>Nombre</td>
                            <td>Precio</td>
                            <td>Cantidad</td>
                            <td>Descontinuado</td>
                        </tr>                    
                    
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Nombre</td>
                                <td>@item.Precio</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Descontinuado</td>
                            </tr>
                        }                   
                </table>

            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                @if(Model.Count()>0)
                { <div class="checkbox"> <label>@Html.CheckBox("ordenaMenorAMayor",false) </label> </div> }
            </div>
            <div class="col-sm-6">
                @if(Model.Count()>0)
                { <div class="checkbox"> <label>@Html.CheckBox("ordenarMayorAMenor",false)Ordenar de mayor a menor</label> </div> }
            </div>
        </div>

        <form action="/Prueba2/MostrarTodosProductos" method="post">
            <div class="form-group">
                <button id="botonMostrarTodosProducts"type="submit" class="btn btn-danger btn-lg">
                <span class="glyphicon glyphicon-expand"></span>
                Mostrar todos los productos</button>
            </div>          
        </form>
    </div>

</body>
</html>
