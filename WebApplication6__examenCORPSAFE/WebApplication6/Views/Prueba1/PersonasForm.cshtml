@using WebApplication6.Models
@model Anio

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>View</title>
    <link href="~/Scripts/bootstrap-3.3.7-dist/css/bootstrap.min.css" rel="stylesheet"/>
    <script type="text/javascript" src="~/Scripts/jquery-3.2.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/FuncionesPrueba1.js"></script>

    <script type="text/javascript">
        addEventListener('load', inicio, false);

        function inicio()
        {
            document.getElementById('boton1').addEventListener('click', cambiarActionDeFormAOpcion1, false);
            document.getElementById('boton2').addEventListener('click', hola, false);
            document.getElementById('boton3').addEventListener('click', hola2, false);
        }

        function cambiarActionDeFormAOpcion1()
        {
            document.getElementById('formulario1').action = "/Prueba1/ProcesarBoton1";
        }
         
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button><a class="navbar-brand" href="#">My demo</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="#">Index</a></li>
                    <li><a href="/Prueba2/Index/">Prueba 2</a></li>
                </ul>
            </div>
        </div> <!-- container-fluid -->
    </nav>




    <div class="jumbotron"><h1>Prueba 1 Formulario</h1></div>
    
    <div class="container-fluid"> 
        @{   
                  
            List<int> numero = new List<int>();
             for (int i = 10; i < 70;i++)
             {
                 numero.Add(i);
             }             
         }

        <!--/Prueba1/ProcesarBoton1 -->
        <form action="" method="post" class="form-horizontal" role="form" id="formulario1">

            <div class="form-group">
                <label for="Nombre" class="col-sm-3 control-label">Nombre de la persona</label>
                <div class="col-sm-9">
                    @Html.TextBox("Nombre", null, new { @class = "form-control" })
                </div>                
            </div>

            <div class="form-group">
                <label for="Edad" class="col-sm-3 control-label">Edad</label>
                <div class="col-sm-9">
                    @Html.DropDownList("Edad", new SelectList(numero), "selecciona edad", new { @class = "form-control" })
                </div>
            </div> 

            <div class="form-group">
                <label for="EstadoCivil" class="col-sm-3 control-label">@Html.CheckBox("EstadoCivil", false)Casado</label>
                <div class="col-sm-9">
                    
                </div>
            </div>

            <div class="form-group">
                <label for="MesAnio" class="col-sm-3 control-label">Mes del año</label>
                <div class="col-sm-9">
                    @Html.EnumDropDownListFor(x => x.MesAnio, "Selecciona un mes", new { @class = "form-control" })
                </div>
            </div>
            
           <div class="form-group">
               <label for="Genero" class="col-sm-3 control-label">
                   <input id="Radio1" name="Genero" type="radio" value="Hombre" checked />Hombre
                   </label>
                   
               <div class="col-sm-9"></div>
           </div>
             
        <div class="form-group">
            <label for="Genero" class="col-sm-3 control-label">                
                <input id="Radio2" name="Genero" type="radio" value="Mujer" />Mujer
            </label>
            
            <div class="col-sm-9"></div>
        </div>
         

         <div class="form-group">
             <div class="col-sm-offset 6 col-sm-2">
                 <button id="boton1" type="submit" class="btn btn-primary">Primer boton</button>
             </div>

             <div class="col-sm-2">
                 <button id="boton2" type="button" class="btn btn-primary">segundo boton</button>
             </div>

             <div class="col-sm-2">
                 <button id="boton3" type="button" class="btn btn-primary">tercer boton</button>
             </div>
         </div>

          
                  
        </form>



    </div>

    <div class="container-fluid" id="resultado"></div>
</body>
</html>
